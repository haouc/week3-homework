
<style>
  h2 {
    color: white;
    background: #555;
    padding: 6px;
    text-align: center;
  }
  .admission_price {
    color: gray;
    border: solid 1px gray;
    padding: 4px;
  }
  img {
    float: left;
    margin-right: 40px;
    box-shadow: 8px 8px 4px gray;
/*    width: "400px";
    height: "300px"*/
  }
  p {
    margin-top: 24px;
    margin-bottom: 24px;
  }
</style>

<h2><%= @place[:title] %></h2>

<p>
  <img src=<%= @place[:photo_url] %> alt="Image Not Available"/ height="400" width="600">
  <span class="admission_price">Admission: $ <%= @place[:admission_price]/100.0 %></span>
  <%= @place[:description] %>
</p>

  <%= link_to "EDIT", "/places/#{@place.id}/edit" %> 
<br><br><br><br><br><br><br><br><br><br><br><br><br>
<p>
<h3>
Please leave your review                                                 
</h3>

<form action="/places/<%= @place[:id] %>/reviews" method="get" >

Enter the title of your review:<br>
<input name="reviewtitle" type="text" size="50"><br>

Enter your rate:<br>
<input name="reviewrate" type="text" size="25"> / 5<br>

Enter your review here:<br>
<textarea name="reviewbody" cols="100" rows="5" ></textarea>
<br>
<button class="btn btn-primary" type="submit">Submit</button>
</form>
<br>
  <% count = 0 %>
  <% @reviews.each do |review| %>
  <% if(review[:title].to_s != "") %>
  <ul>
    <li>
        Review <%= count=count+1 %>:
        <%= review[:title] %>
        (Rate: <%= review[:rate] %> / 5),
        <%= review[:description] %>
    </li>
  </ul>
  <% end %>
  <% end %>
</p>

